rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@anandtravels.com';
    }
    
    match /agents/{docId} {
      // Allow reading agent data for authentication (open read access)
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /bookings/{docId} {
      allow read: if request.auth != null && (
        isAdmin() || 
        resource.data.assignedAgent == request.auth.token.email
      );
      allow write: if isAdmin();
    }
    
    match /contact_submissions/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
