// Firebase rules to paste in the console
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read/write access to contact submissions
    match /contact_submissions/{document=**} {
      allow read: if request.auth != null; // Only authenticated users can read
      allow write: if true; // Anyone can submit contact form
    }
    
    // Allow public read/write access to bookings
    match /bookings/{document=**} {
      allow read: if request.auth != null; // Only authenticated users can read
      allow write: if true; // Anyone can submit booking
    }
    
    // Protect other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}